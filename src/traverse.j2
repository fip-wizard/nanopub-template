    {{- initNanopubVars(question, nanopub_vars) -}}
    {#- print nanopub -#}
{{- renderNanopubVars(question, nanopub_vars, vars) -}}
{{ nanopubs.basicNanopub(nanopub_vars) }}
  {%- endif -%}
{%- endmacro -%}

{%- macro traverseOutMultiChoiceQuestion(question, path, reply_vars) -%}
